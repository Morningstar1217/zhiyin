.container {
    background-color: #F2f2f2;
}

.coupons-list {
    width: 100%;
    background-color: #fff;
    margin-top: 20rpx;
}

.bottom-box {
    position: fixed;
    width: 100%;
    bottom: 0;
    font-size: 28rpx;
    color: #000000;
    border-top: 1rpx solid #eee;
    height: 100rpx;
    line-height: 100rpx;
    background: #fff url(https://cdn.it120.cc/images/weappshop/arrow-right.png) no-repeat 705rpx center;
}

.bottom-box .add-btn {
    margin-left: 30rpx;
    padding-left: 70rpx;
    background: url(https://cdn.it120.cc/images/weappshop/add-addr.png) no-repeat left center;
    background-size: 40rpx auto;
}

.coupons-item {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 80%;
    height: 180rpx;
    margin: 20rpx auto;
    padding: 40rpx;
    font-size: 30rpx;
    line-height: 50rpx;
    border-radius: 20px;
    color: #fff;
    background: linear-gradient(to left, #f3b85f, #f1a83b);
}

.coupons-left {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.coupons-right {
    align-self: center;
}