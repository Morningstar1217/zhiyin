/* pages/column/index.wxss */

@import "../index/index.wxss";
.container {
    margin-top: 120rpx;
    background: #fff;
}

/* 类别选择 */

.colTypeWrap {
    height: 180rpx;
    padding: 20rpx 0;
    width: 100%;
    border-bottom: 1px solid #eee;
}

.colTypeWrapSwiper {
    white-space: nowrap;
    height: 180rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.colType {
    height: 180rpx;
    width: 35%;
    margin: 0 20rpx;
    text-align: center;
    display: inline-block;
    border-radius: 20rpx;
    background-size: cover;
    position: relative;
    overflow: hidden;
}

.wrap {
    height: 180rpx;
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
    background: rgba(255, 255, 255, .3);
}

.colType>text {
    font-size: 28rpx;
    display: block;
    margin-top: 70rpx;
    color: #fff;
}

/* 专栏详情 */

.columnList {
    width: 100%;
    overflow: hidden;
    margin-top: 20rpx;
}

.columnWrap {
    width: 90%;
    margin: 20rpx auto;
    border-radius: 10rpx;
    overflow: hidden;
    position: relative;
}

.columnWrap image {
    width: 100%;
    height: 360rpx;
    border-radius: 10rpx;
}

.columnTitle {
    position: absolute;
    width: 100%;
    color: #fff;
    font-size: 28rpx;
    text-indent: .2em;
    bottom: 10rpx;
    left: 0;
    background: linear-gradient(bottom, #000, #fff);
}

.title {
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.date {
    font-size: 20rpx;
}

.no-more-goods {
    text-align: center;
    font-size: 24rpx;
    padding-bottom: 48rpx;
    color: #999;
    margin-top: 100rpx;
}