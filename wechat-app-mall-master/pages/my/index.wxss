page {
  height: 100%;
}

.container {
  min-height: 100%;
  overflow: hidden;
  overflow-y: hidden;
  background: #f2f2f2;
  display: block;
}

.userinfo {
  color: #555;
  display: flex;
  flex-direction: row;
  padding: 160rpx 0 20rpx;
  align-items: center;
  background-image: url("http://pbn1t9k4c.bkt.clouddn.com/bg5.jpg");
  background-size: cover;
  background-repeat: no-repeat;
  /* background-color: #69C3AA; */
  width: 750rpx;
  justify-content: space-around;
  font-size: 32rpx;
}

.userImg-wrap {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  /* margin-top: 20rpx; */
  color: #555;
  text-align: center;
  font-size: 36rpx;
}

.version {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  text-align: center;
  padding: 40rpx;
}

.item-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
  flex-wrap: wrap;
  color: #666;
  background: #fff;
}

.item-container2 {
  margin-top: 4rpx;
}

.my-item {
  width: 25%;
  text-align: center;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}

.navigator-hover {
  background: #fff;
}

.my-item image {
  width: 60rpx;
  height: 60rpx;
}

.my-item text {
  margin-top: 10rpx;
}

.about {
  width: 100%;
  background: url(https://cdn.it120.cc/images/weappshop/arrow-right.png) no-repeat 750rpx center;
  background-size: 16rpx auto, 750rpx auto;
  margin: 20rpx 0;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 100rpx;
}

.my-order {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  /* border-bottom: 1px solid #eee; */
  color: #333;
  text-indent: 1.5em;
  background: #fff;
}

.my-order image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-bottom: 12rpx;
  margin-right: 6rpx;
}

.num {
  position: absolute;
  top: 30rpx;
  right: 50rpx;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  background: #e64340;
  font-size: 20rpx;
  border-radius: 50%;
  color: #fff;
}

.copyright {
  margin-top: 40rpx;
  font-size: 24rpx;
  color: #666;
  width: 100%;
  text-align: center;
  /* background: #fff; */
  height: 80rpx;
  line-height: 80rpx;
}