.container {
  min-height: 100%;
  overflow: hidden;
  overflow-y: hidden;
}

.userinfo {
  color: #333;
  display: flex;
  flex-direction: row;
  padding: 80rpx 0;
  align-items: center;
  background-image: url("http://pbn1t9k4c.bkt.clouddn.com/bg2.png");
  background-size: cover;
  background-repeat: no-repeat;
  /* background: #69C3AA; */
  width: 750rpx;
  justify-content: space-around;
  font-size: 32rpx;
}

.userImg-wrap {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  margin-top: 20rpx;
  color: #333;
  text-align: center;
  font-size: 36rpx;
}

.version {
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  text-align: center;
  padding: 40rpx;
}

.item-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
  flex-wrap: wrap;
  color: #666;
  margin-top: 20rpx;
}

.my-item {
  width: 25%;
  text-align: center;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.signIn {
  margin-top: 40rpx;
}

.signIn button{
  width: 240rpx;
}

.navigator-hover {
  background: #fff;
}

.my-item image {
  width: 60rpx;
  height: 60rpx;
}

.my-item text {
  margin-top: 10rpx;
}

.about {
  width: 100%;
  background: url(https://cdn.it120.cc/images/weappshop/arrow-right.png) no-repeat 750rpx center;
  background-size: 16rpx auto, 750rpx auto;
  margin: 20rpx 0;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 100rpx;
}